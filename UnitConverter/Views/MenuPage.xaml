<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnitConverter.Views.MenuPage"
             Title="MenuPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Primary}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Color1">#FF6B35</Color>
            <Color x:Key="Color2">#4ECDC4</Color>
            <Color x:Key="Color3">#FFD166</Color>
            <Color x:Key="Color4">#EF476F</Color>
            <Color x:Key="Color5">#06D6A0</Color>
            <Color x:Key="Color6">#118AB2</Color>
            <Color x:Key="Color7">#073B4C</Color>
            <Color x:Key="Color8">#7209B7</Color>
            <Color x:Key="Color9">#3A86FF</Color>

            <LinearGradientBrush x:Key="Gradient1" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD166" Offset="0.0" />
                <GradientStop Color="#FFB347" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="Gradient2" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4ECDC4" Offset="0.0" />
                <GradientStop Color="#44A08D" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="Gradient3" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#EF476F" Offset="0.0" />
                <GradientStop Color="#FF9A9E" Offset="1.0" />
            </LinearGradientBrush>

            <Style x:Key="CategoryFrame" TargetType="Frame">
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Margin" Value="5" />
            </Style>

            <Style x:Key="CategoryLabel" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="0,5" />
            </Style>

            <Style TargetType="ImageButton" x:Key="PlayfulImageButton">
                <Setter Property="HeightRequest" Value="80" />
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Aspect" Value="AspectFit" />
                <Setter Property="Padding" Value="10" />
            </Style>

            <Style TargetType="Label" x:Key="TitleLabel">
                <Setter Property="FontSize" Value="32" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="#FF6B35" />
                <Setter Property="Margin" Value="0,20,0,30" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto, *, *, *" 
              ColumnDefinitions="*, *, *"
              RowSpacing="10"
              ColumnSpacing="10"
              Padding="20">

            <Frame Grid.Row="0" Grid.ColumnSpan="3"
                   CornerRadius="30"
                   Background="{StaticResource Gradient1}"
                   Padding="20,15"
                   HasShadow="True">
                <Label Text="Unit Adventure" 
                       Style="{StaticResource TitleLabel}" />
            </Frame>

            <Frame Grid.Row="1" Grid.Column="0"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient1}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="bit.png"
                                 ClassId="Digital Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text=" Digital" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="1" Grid.Column="1"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient2}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="area_graph.png"
                                 ClassId="Area Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Area" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="1" Grid.Column="2"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient3}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="arrows.png"
                                 ClassId="Speed Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Speed" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="2" Grid.Column="0"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient2}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="clock.png"
                                 ClassId="Time Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Time" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="2" Grid.Column="1"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient3}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="multimeter.png"
                                 ClassId="Energy Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Energy" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="2" Grid.Column="2"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient1}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="scale.png"
                                 ClassId="Length Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Length" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="3" Grid.Column="0"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient3}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="temperature.png"
                                 ClassId="Temperature Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Temp" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="3" Grid.Column="1"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient1}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="volume_measurement.png"
                                 ClassId="Volume Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Volume" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="3" Grid.Column="2"
                   Style="{StaticResource CategoryFrame}"
                   Background="{StaticResource Gradient2}">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <ImageButton Style="{StaticResource PlayfulImageButton}"
                                 Source="weight.png"
                                 ClassId="Mass Converter"
                                 Clicked="ImageButton_Clicked"/>
                    <Label Text="Mass" 
                           Style="{StaticResource CategoryLabel}" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>

</ContentPage>